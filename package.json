{
  "name": "talk_codex_gemini",
  "version": "1.0.0",
  "description": "Gemini-Codex debate simulator",
  "main": "dist/server/index.js",
  "scripts": {
    "dev:server": "tsx watch server/index.ts",
    "dev:web": "vite --config web/vite.config.ts",
    "dev": "concurrently -k \"npm:dev:server\" \"npm:dev:web\"",
    "dev:up": "bash scripts/dev-up.sh",
    "dev:down": "bash scripts/dev-down.sh",
    "dev:status": "bash scripts/dev-status.sh",
    "build:server": "tsc -p server/tsconfig.json",
    "build:web": "vite build --config web/vite.config.ts",
    "build": "npm run build:server && npm run build:web",
    "start": "node dist/server/index.js",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "playwright test"
  },
  "keywords": [
    "gemini",
    "codex",
    "debate",
    "simulator"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "jsdom": "^28.1.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
